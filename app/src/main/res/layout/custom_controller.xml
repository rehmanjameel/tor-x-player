<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <ImageView
        android:id="@+id/closePlayer"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/outline_keyboard_backspace_24"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="title"
        android:textSize="20sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toEndOf="@id/closePlayer"
        android:layout_toStartOf="@id/imageViewLock"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/imageViewLock"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:src="@drawable/baseline_lock_open_24"
        android:theme="@style/ClickableView" />

    <LinearLayout
        android:id="@+id/linearLayoutControlUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/custom_rew"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginEnd="50dp"
            android:src="@drawable/baseline_replay_10_24"
            android:visibility="visible"
            android:theme="@style/ClickableView" />

        <ImageView
            android:id="@+id/custom_play"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/baseline_pause_circle_filled_24"
            android:theme="@style/ClickableView" />

        <ImageView
            android:id="@+id/custom_ffwd"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginStart="50dp"
            android:visibility="visible"
            android:src="@drawable/baseline_forward_10_24"
            android:theme="@style/ClickableView" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutControlBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:padding="8dp">

<!--            <TextView-->
<!--                android:id="@+id/exo_position"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:textColor="@color/white"-->
<!--                android:visibility="gone"/>-->

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginEnd="4dp"-->
<!--                android:text="/"-->
<!--                android:textColor="#CBCDC8"-->
<!--                android:visibility="gone"/>-->

<!--            <TextView-->
<!--                android:id="@+id/exo_duration"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_weight="1"-->
<!--                android:textColor="#CBCDC8"-->
<!--                android:visibility="gone"-->
<!--                />-->

            <ImageView
                android:id="@+id/imageViewFullScreen"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/baseline_fullscreen_24"
                android:theme="@style/ClickableView" />
        </LinearLayout>

        <!-- Seekbar + Time Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tvCurrentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginEnd="0dp" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:progressDrawable="@drawable/custom_seekbar"
                android:thumbTint="@color/white"
                android:thumb="@drawable/seekbar_thumb" />

            <TextView
                android:id="@+id/tvTotalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginStart="0dp" />

        </LinearLayout>

        <androidx.media3.ui.DefaultTimeBar
            android:id="@+id/exo_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-8dp"
            app:buffered_color="#95989F"
            app:played_color="#FF00FF"
            app:scrubber_color="#FF00FF"
            android:visibility="gone"
            app:unplayed_color="#45424E" />

    </LinearLayout>

    <!-- Left side: Brightness -->
    <SeekBar
        android:id="@+id/seekBarBrightness"
        android:layout_width="4dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:max="100"
        android:progress="50"
        android:rotation="270"
        android:layout_marginStart="20dp"
        android:visibility="gone"
        android:thumb="@drawable/seekbar_thumb"
        android:progressDrawable="@drawable/custom_seekbar"/>

    <!-- Right side: Volume -->
    <SeekBar
        android:id="@+id/seekBarVolume"
        android:layout_width="4dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:max="100"
        android:progress="50"
        android:rotation="270"
        android:layout_marginEnd="20dp"
        android:visibility="gone"
        android:thumb="@drawable/seekbar_thumb"
        android:progressDrawable="@drawable/custom_seekbar"/>


</RelativeLayout>