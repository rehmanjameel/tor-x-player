<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.AudiosFragment">

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:padding="10dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/bannerId"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/banner"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/donation"
            style="@style/ClickableView"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="-20dp"
            android:layout_marginTop="0dp"
            android:paddingTop="7dp"
            android:layout_toEndOf="@id/bannerId"
            android:src="@drawable/donation"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/searchIcon"
            style="@style/ClickableView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@id/mainMenu"
            android:padding="5dp"
            android:src="@drawable/outline_search_24"
            android:visibility="visible"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/mainMenu"
            style="@style/ClickableView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:src="@drawable/baseline_file_download_24"
            android:visibility="visible"
            app:tint="@color/white" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/searchLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/outline_keyboard_backspace_24"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/backArrow"
            android:gravity="center">

            <EditText
                android:id="@+id/searchTIET"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="0dp"
                android:layout_weight="1"
                android:autofillHints="username"
                android:background="@drawable/et_bg"
                android:hint="search audio"
                android:inputType="text"
                android:padding="10dp"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/gray"
                android:visibility="visible" />

            <TextView
                android:id="@+id/searchTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="SEARCH"
                android:textColor="@color/green"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/historyLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/topLayout">
            <TextView
                android:id="@+id/historyTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:textColor="@color/white"
                android:layout_alignParentStart="true"
                android:padding="10dp"/>

            <ImageView
                android:id="@+id/delHistoryIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_delete_24"
                android:layout_alignParentEnd="true"
                android:padding="10dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/historyTxt"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                />

            <TextView
                android:id="@+id/historyEmptyView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your audio history will display here"
                android:textColor="@color/white"
                android:visibility="visible"
                android:textSize="11sp"
                android:layout_below="@+id/historyTxt"
                android:layout_centerInParent="true" />

        </RelativeLayout>

    <!-- ==================== CUSTOM TABS ==================== -->
    <RelativeLayout
        android:id="@+id/customTabs"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/historyLayout">

        <!-- VIDEO TAB -->
        <LinearLayout
            android:id="@+id/tabVideosLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tabAudios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Audio"
                android:textColor="@color/green"
                android:textStyle="bold" />

            <!-- Underline -->
            <View
                android:id="@+id/lineAudios"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/green"
                android:visibility="visible" />
        </LinearLayout>

        <!-- FOLDER TAB -->
        <LinearLayout
            android:id="@+id/tabFolderLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@id/tabVideosLayout"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tabFolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Folder"
                android:textColor="@color/white" />

            <View
                android:id="@+id/lineFolder"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/green"
                android:visibility="gone" />
        </LinearLayout>


        <!-- PLAYLIST TAB -->
        <LinearLayout
            android:id="@+id/tabPlaylistLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@id/tabFolderLayout"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tabPlaylist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Playlist"
                android:textColor="@color/white" />

            <View
                android:id="@+id/linePlaylist"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/green"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Swap Icon -->
        <ImageView
            android:id="@+id/swapIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            android:src="@drawable/baseline_swap_vert_24"
            app:tint="@color/white" />

    </RelativeLayout>

    <!-- ==================== SELECT ALL ==================== -->
    <CheckBox
        android:id="@+id/selectAllCheckbox"
        style="@style/CustomCheckboxBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:padding="10dp"
        android:text="Select All"
        android:textColor="@color/white"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/folderBackLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:layout_below="@id/customTabs"
        app:layout_constraintTop_toBottomOf="@id/customTabs">

        <ImageView
            android:id="@+id/folderBackArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            android:src="@drawable/outline_keyboard_backspace_24"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/folderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="Folder Name"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/audioRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:visibility="visible"
        android:paddingBottom="90dp"
        app:layout_constraintTop_toBottomOf="@id/customTabs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/audioFolderRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="00dp"
        android:paddingBottom="0dp"
        android:visibility="gone"
        android:layout_below="@id/customTabs"
        app:layout_constraintTop_toBottomOf="@id/customTabs" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/selectedAudiosRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="00dp"
        android:paddingBottom="0dp"
        android:visibility="gone"
        android:layout_below="@id/customTabs"
        app:layout_constraintTop_toBottomOf="@id/customTabs" />

    <TextView
        android:id="@+id/emptyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your audios will display here"
        android:visibility="gone"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>