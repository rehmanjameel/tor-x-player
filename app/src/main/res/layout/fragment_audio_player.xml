<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/black"
    tools:context=".fragments.AudioPlayerFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/closePlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/outline_keyboard_backspace_24"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="title"
            android:textSize="20sp"
            android:maxLines="2"
            android:visibility="gone"
            android:layout_toEndOf="@id/closePlayer"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/albumArt"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/audio_thumbnail"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvTitle"
        android:text="Song Title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Seekbar + Time Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/tvCurrentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginEnd="8dp" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:progressDrawable="@drawable/custom_seekbar"
            android:thumbTint="@color/white"
            android:thumb="@drawable/seekbar_thumb" />

        <TextView
            android:id="@+id/tvTotalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Playback Controls -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnPrev"
            android:src="@drawable/outline_skip_previous_24"
            android:background="@null"
            android:padding="16dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <ImageButton
            android:id="@+id/btnPlayPause"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/baseline_play_arrow_24"
            android:background="@null"
            android:padding="16dp" />

        <ImageButton
            android:id="@+id/btnNext"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/outline_skip_next_24"
            android:background="@null"
            android:padding="16dp" />
    </LinearLayout>

    <!-- Playback Speed -->
    <LinearLayout
        android:id="@+id/playbackSpeedContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tvSpeedLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speed:"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tvSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.0x"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@color/black"
            android:padding="6dp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Lottie Animation -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/heartbeatAnim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:lottie_rawRes="@raw/music_beat"
        app:lottie_autoPlay="false"
        app:lottie_loop="true" />

</LinearLayout>
