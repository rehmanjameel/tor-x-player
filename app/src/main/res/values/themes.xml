<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TorXplayer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- Status bar color. -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>

        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.TorXplayer" parent="Base.Theme.TorXplayer" />

    <style name="CardView." parent="CardView">
        <item name="android:foreground">@drawable/card_bg_gradient</item>
    </style>

    <style name="CustomCheckboxBrand" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>

        <!-- IMPORTANT: remove AppCompat tint -->
        <item name="buttonTint">@null</item>
        <item name="android:buttonTint">@null</item>

        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>